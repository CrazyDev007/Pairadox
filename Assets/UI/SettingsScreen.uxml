                <ui:VisualElement class="option-row">
                    <ui:Label text="Show Hints" class="option-label" />
                    <ui:Toggle name="hintsToggle" class="option-toggle" />
                </ui:VisualElement>
                <ui:VisualElement class="option-row">
                    <ui:Label text="Auto-Save" class="option-label" />
                    <ui:Toggle name="autoSaveToggle" class="option-toggle" />
                </ui:VisualElement>
                <ui:VisualElement class="option-row">
                    <ui:Button name="resetProgressButton" text="Reset Progress" class="reset-button" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>
        <ui:VisualElement class="about-section">
            <ui:Label text="About" class="section-title" />
            <ui:VisualElement class="about-content">
                <ui:Label text="Pairadox v1.0" class="version-label" />
                <ui:Label text="A challenging card matching game" class="description-label" />
                <ui:Button name="creditsButton" text="Credits" class="credits-button" />
